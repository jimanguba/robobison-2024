generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  reminderTime String?
  createdAt   DateTime @default(now())
}

model Reminder {
  id              Int      @id @default(autoincrement())
  title           String
  catName         String
  description     String
  notificationTime String  // Store the time as a String (HH:MM format)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
